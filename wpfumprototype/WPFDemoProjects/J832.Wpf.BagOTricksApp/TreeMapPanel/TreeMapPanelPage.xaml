<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:Microsoft.Samples.KMoore.WPFSamples.TreeMapPanelSample;assembly=J832.Wpf.BagOTricksLib">

  <Page.Resources>
    
    <Style TargetType="Rectangle">
      <Setter Property="Margin" Value="2"/>
    </Style>
    
  </Page.Resources>
  
  <Grid>
    <cc:TreeMapPanel>
      <Rectangle Fill="Red" cc:TreeMapPanel.Area="8"/>
      <Rectangle Fill="Orange" cc:TreeMapPanel.Area="3"/>
      <Rectangle Fill="Yellow" cc:TreeMapPanel.Area="4"/>
      <Rectangle Fill="Green" cc:TreeMapPanel.Area="2"/>
      <Rectangle Fill="Blue" cc:TreeMapPanel.Area="5"/>
      <Rectangle Fill="Violet" cc:TreeMapPanel.Area="7"/>
      
      <Rectangle Stroke="Red" StrokeThickness="5" cc:TreeMapPanel.Area="2"/>
      <Rectangle Stroke="Orange" StrokeThickness="5" cc:TreeMapPanel.Area="6"/>
      <Rectangle Stroke="Yellow" StrokeThickness="5" cc:TreeMapPanel.Area="2"/>
      <Rectangle Stroke="Green" StrokeThickness="5" cc:TreeMapPanel.Area="9"/>
      <Rectangle Stroke="Blue" StrokeThickness="5" cc:TreeMapPanel.Area="1"/>
      <Rectangle Stroke="Violet" StrokeThickness="5" cc:TreeMapPanel.Area="4"/>

    </cc:TreeMapPanel>
  </Grid>

</Page>
